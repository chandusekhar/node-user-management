<% include header %>

<h2 class="txt-cntr">Edit User</h2>
<% if (locals.success) { %>
    <div class="txt-cntr sucess-msg">THE USER IS SUCCESSFULLY EDITED...</div>
<% } %>
<div class="login-head txt-cntr">
    <form id= "login-form" enctype="multipart/form-data" action="/users/<%=id%>" method="post">
        <div class="fl clr d-i-b">
            <label>EMAIL</label>
            <input type="text" name="email" value="<%=email%>"/>
        </div>
        <div class="fl clr d-i-b">
            <label>USERNAME</label>
            <input type="text" name="username" autocomplete="off" value="<%=username%>"/>
        </div>
        <div class="fl clr d-i-b">
            <label>PASSWORD</label>
            <input type="password" name="pwd" autocomplete="off" value=""/>
        </div>
        <div class="fl clr d-i-b">
            <label>CONFIRM PASSWORD</label>
            <input type="password" name="confirmpwd" value=""/>
        </div>
        <div class="txt-cntr clr submit-button">
            <input type="submit"  value="Submit"/>
        </div>
        <% if(locals.err) { %>
        <span class="err-msg fl"><%=err%></span>
        <% } %>
    </form>
</div>
        <a class="fr home-link" href="/home">Back to Home</a>

<% include footer %>